<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css"
        href="https://cdn.datatables.net/v/bs4/dt-1.10.20/b-1.6.1/b-colvis-1.6.1/r-2.2.3/rr-1.2.6/sc-2.0.1/sl-1.3.1/datatables.min.css" />



    <title>UGCLoad Test Rig</title>
</head>

<body>

    <div class="jumbotron text-center">
        <h1>UgcUpLoad Test Rig</h1>
        <p> <a href="/">This is used to perform load Tests on a kubernetes cluster.</a></p>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <hr style="width: 100%; color: black; height: 1px; background-color:black;" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 text-center">
                <div class="panel panel-default">
                    <a href=" {{ .MonitorURL }}" target="_blank">View Cluster</a>
                </div>
            </div>

            <div class="col-md-6 text-center">
                <a href=" {{ .DashboardURL }}" target="_blank">Grafana Dashboaard</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <hr style="width: 100%; color: black; height: 1px; background-color:black;" />
            </div>
        </div>
        {{if .ProblemsBinding}}
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="alert alert-primary" role="alert">
                    Problems binding form data: {{ .ProblemsBinding}}
                </div>
            </div>
        </div>
        {{end}}
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-title">
                        <h3 class="text-center"><strong>Generate Report</strong></h3>
                    </div>
                    <div class="card-body">
                        <!-- Example split danger button -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary">Select Tenant</button>
                            <button type="button" class="btn btn-primary btn-lg dropdown-toggle dropdown-toggle-split"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu">
                                {{range $element := .TenantList}}
                                <a id="fetchReport" class="dropdown-item" href="#">{{$element}}</a>
                                <div class="dropdown-divider"></div>
                                {{end}}
                            </div>
                        </div>
                        <div>
                            <div class="text-center">
                                <a href=" {{ .ReportURL }}" target="_blank">View Reports</a>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <table id="tenantReport">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Date</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="col-md-4">

                <div class="card">
                    <div class="card-title">
                        <h3 class="text-center"><strong>Test Creation</strong></h3>
                    </div>
                    <div class="card-body">
                        <fieldset>
                            <form method="post" id="startTestFrm" action="/start-test" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="context">Tennant</label>
                                    <input type="text" class="form-control" name="context" id="context"
                                        aria-describedby="tenantHelp" {{if .Context}} value={{ .Context }} {{ end}}
                                        placeholder="Enter Tennant">
                                    <small id="tenantHelp" class="form-text text-muted">This is the tenant in which
                                        you
                                        want to run
                                        the tests</small>
                                </div>
                                <div id="MissingTenant"></div>
                               
                               <div id="InvalidTenantName"></div>

                                <div class="form-group">
                                    <label for="numberOfNodes">Number of Nodes</label>
                                    <input {{if .NumberOfNodes}} value={{ .NumberOfNodes }} {{ end}} type="text"
                                        class="form-control" name="numberOfNodes" id="numberOfNodes"
                                        placeholder="Number of Nodes">
                                </div>
                                
                                <div id="MissingNumberOfNodes"></div>

                                <div class="form-group">
                                    <label for="bandWidthSelection">Select the bandwidth</label>
                                    <select class="form-control" name="bandWidthSelection" id="bandWidthSelection">
                                        <option value="adsl">ADSL : 8 Mbit/s</option>
                                        <option value="adsl2">ADSL2 : 12 Mbit/s</option>
                                        <option value="adsl2Plus">ADSL2+ : 24 Mbit/s</option>
                                        <option value="ethernetLan">Ethernet LAN ; 10 Mbit/s</option>
                                        <option value="fastEthernet">Fast Ethernet : 100 Mbit/s</option>
                                        <option value="gigabitEthernet">Gigabit Ethernet : 1 Gbit/s</option>
                                        <option value="10gigabitEthernet">10 Gigabit Ethernet : 10 Gbit/s</option>
                                        <option value="100gigabitEthernet">100 Gigabit Ethernet : 100 Gbit/s
                                        </option>
                                        <option value="mobileDataEdge">Mobile data EDGE : 384 kbit/s</option>
                                        <option value="mobileDataHspa">Mobile data HSPA : 14,4 Mbp/s</option>
                                        <option value="mobileDatacHspaPlus">Mobile data HSPA+ : 21 Mbp/s</option>
                                        <option value="mobileDataDcHspaPlus">Mobile data DC-HSPA+ : 42 Mbps</option>
                                        <option value="mobileDataLte">Mobile data LTE : 150 Mbp/s</option>
                                        <option value="mobileDataGprs">Mobile data GPRS : 171 kbit/s</option>
                                        <option value="wifi80211a">WIFI 802.11a/g : 54 Mbit/s</option>
                                        <option value="wifi80211n">WIFI 802.11n : 600 Mbit/s</option>
                                    </select>
                                </div>

                                <div class="form-group file-upload-wrapper">
                                    <label for="script-file-upload">Jmeter Script</label>
                                    <input name="jmeter" id="script-file-upload" type="file" class="file-upload" />
                                    <small id="dataHelp" class="form-text text-muted">This is the Jmeter script to
                                        upload</small>
                                </div>
                                <div id="MissingJmeter"></div>
                            
                                <div class="form-group file-upload-wrapper">
                                    <label for="data-file-upload">Data</label>
                                    <input name="data" id="data-file-upload" type="file" class="file-upload"
                                        aria-describedby="jmeterHelp" />
                                    <small id="jmeterHelp" class="form-text text-muted">This is the data file used
                                        by
                                        the test</small>
                                </div>
                                 <div id="MissingData"></div>
                                <div id="GenericCreateTestMsg"></div>
                                <button type="submit" id="startTestBtn" class="btn btn-primary">Run Test</button>

                            </form>
                        </fieldset>
                    </div>
                    <div i="Success"></div>
    
                </div>

            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-title">
                        <h3 class="text-center"><strong>Stop Test</strong></h3>
                    </div>
                    <div class="card-body">
                        <fieldset>
                            <form method="post" id="stopTestFrm" action="/stop-test" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="context">Tennant</label>
                                    <div id="RunningTests">
                                       {{ $length := len .RunningTests }} 
                                        {{ if gt $length 0 }}
    
                                      <div>
                                        <select aria-label="Running Tests" class="form-control" name="stopcontext" id="stopcontext">
                                            {{range $tenant := .RunningTests}}
                                                 {{if $tenant.Running}} 
                                                    <option value="{{$tenant.Namespace}}">{{$tenant.Namespace}}</option>
                                                {{end}}
                                            {{end}}
                                        </select>
                                        <small id="tenantHelp" class="form-text text-muted">This is the tenant in which
                                        you
                                        want to stop
                                        the test for </small>
  
                                      </div>
  
                                    {{ end }}

                                    </div>
 
                                </div>

                                {{ $length := len .RunningTests }} 
                                {{ if gt $length 0 }}
                                        <button type="submit" id="stopTestBtn" class="btn btn-primary">Stop Test</button>
                                {{ else }}
                                        <div class="alert alert-warning" role="alert">No Tests are running</div>
                                {{ end }}
                                {{if .StopTenantMissing}}
                                <div class="alert alert-primary" role="alert">
                                    <strong>You must supply the tenant name</strong>
                                </div>
                                {{end}}
                                {{if .InvalidTenantStop}}
                                <div class="alert alert-primary" role="alert">
                                    <strong>These names are not valid: {{ .InvalidTenantStop}}</strong>
                                </div>
                                {{end}}
                                {{if .TennantNotStopped}}
                                <div class="alert alert-primary" role="alert">
                                    <strong>Was not able to stop the test {{ .TennantNotStopped}}</strong>
                                </div>
                                {{end}}
                                {{if .TenantStopped}}
                                <div class="alert alert-success" role="alert">
                                    <strong>Test were stopped for: {{ .TenantStopped}}</strong>
                                </div>
                                {{end}}
                            </form>
                        </fieldset>
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-title">
                        <h3 class="text-center"><strong>Tenant Deletion</strong></h3>
                    </div>
                    <div class="card-body">
                        <fieldset>
                            <form method="post" name="delete" id="deleteTenantFrm" action="/delete-tenant"
                                enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="context">Tennant</label>
                                    <div id="AllTenants">
                                       {{ $length := len .AllTenants }} 
                                        {{ if gt $length 0 }}
    
                                      <div>
                                        <select aria-label="Running Tests" class="form-control" name="TenantContext" id="TenantContext">
                                            {{range $tenant := .AllTenants}}
                                                    <option value="{{$tenant.Namespace}}">{{$tenant.Namespace}}</option>
                                            {{end}}
                                        </select>
                                        <small id="tenantHelp" class="form-text text-muted">Select a tenant to delete</small>
                                      </div>
                                    {{ end }}
                                    </div>
                                {{if .TennantNotDeleted}}
                                <div class="alert alert-primary" role="alert">
                                    Tenant not deleted : {{ .TennantNotDeleted}}
                                </div>
                                {{end}}
                                {{if .TenantDeleted}}
                                <div class="alert alert-success" role="alert">
                                    Tenant {{ .TennantNotDeleted}} has been deleted
                                </div>
                                {{end}}
                                {{ $length := len .AllTenants }} 
                                {{ if gt $length 0 }}
                                    <button type="submit" id="deleteTenantBtn" class="btn btn-primary">Delete Tenant</button>
                                {{ else }}
                                        <div class="alert alert-warning" role="alert">No Tenants have been added</div>
                                {{ end }}
                            </div>
                            </form>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script type="text/javascript"
        src="https://cdn.datatables.net/v/bs4/dt-1.10.20/b-1.6.1/b-colvis-1.6.1/r-2.2.3/rr-1.2.6/sc-2.0.1/sl-1.3.1/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script src="/script/js/lodash.min.js?v=1"></script>
    <script src="/script/js/upload.js?v=16"></script>
</body>

</html>